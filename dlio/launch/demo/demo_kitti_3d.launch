<launch>
  <param name="/use_sim_time" value="true" />

  <include file="$(find dlio)/launch/kitti_3d.launch" />

  <node name="rviz" pkg="rviz" type="rviz" required="true"
    args="-d $(find dlio)/configuration_files/kitti_3d_rgb.rviz">
  </node>
  
  <node name="playbag" pkg="rosbag" type="play" args="--clock -r 0.2 $(arg bag_filename)">
    <remap from="/kitti/oxts/imu" to="imu" />
    <remap from="/kitti/velo/pointcloud" to="points2" />
    <remap from="/tf" to="/tf_in" />
  </node>

  <node name="tf_remove_frames" pkg="cartographer_ros"
      type="tf_remove_frames.py">
    <remap from="tf_out" to="/tf" />
    <rosparam param="remove_frames">
      - world
    </rosparam>
  </node>
</launch>